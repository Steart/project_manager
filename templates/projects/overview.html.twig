{% extends 'dashboard/base.html.twig' %}

{% block title %}Project Manager | Projecten!{% endblock %}

{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Projecten</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <a href="/project/new" class="btn btn-sm btn-outline-secondary">Maak nieuw project</a>
                    <a href="/project/book-hours" class="btn btn-sm btn-outline-secondary">Boek uren</a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Projectnummer</th>
                    <th>Projectnaam</th>
                    <th>Startdatum</th>
                    <th>Is zichtbaar</th>
                    <th>Contact</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <th>{{ project.id }}</th>
                        <th>{{ project.name }}</th>
                        <th>{{ project.startDate|date("d-m-Y") }}</th>
                        <th><i class="fa {{ project.isVisible == true ? 'fa-check' : 'fa-close' }}"></i></th>
                        <th>{{ project.contact.name }}</th>
                        <th><a class="btn btn-sm bg-secondary text-white" href="/project/edit/{{ project.id }}">Bewerken</a></th>
                        <th><a class="btn btn-sm bg-secondary text-white" href="/project/details/{{ project.id }}">Details</a></th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}