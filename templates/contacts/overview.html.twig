{% extends 'dashboard/base.html.twig' %}

{% block title %}Project Manager | Contacts!{% endblock %}

{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Contacten</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <a href="/contact/new" class="btn btn-sm btn-outline-primary">Maak nieuw contact</a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Nummer</th>
                    <th>Naam</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <th>{{ contact.id }}</th>
                        <th>{{ contact.name }}</th>
                        <th><a class="btn btn-sm bg-secondary text-white" href="/contact/edit/{{ contact.id }}">Bewerken</a></th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}